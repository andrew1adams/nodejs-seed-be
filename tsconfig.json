{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowJs": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "outDir": "dist",
    "rootDir": "./",
    "baseUrl": "src",
    "paths": {
      "~/*": [
        "*"
      ],
    },
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  
}